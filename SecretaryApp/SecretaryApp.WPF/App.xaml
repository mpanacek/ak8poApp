<Application x:Class="SecretaryApp.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:SecretaryApp.WPF.ViewModels"
             xmlns:views="clr-namespace:SecretaryApp.WPF.Views"
             xmlns:local="clr-namespace:SecretaryApp.WPF">
                
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>


            <DataTemplate DataType="{x:Type viewModels:EmployeeViewModel}">
                <views:EmployeeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:GroupViewModel}">
                <views:GroupView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:SubjectViewModel}">
                <views:SubjectView/>
            </DataTemplate>

            
        </ResourceDictionary> 
        
    </Application.Resources>
</Application>
