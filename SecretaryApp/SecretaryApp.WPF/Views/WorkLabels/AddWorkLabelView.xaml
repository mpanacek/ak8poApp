<Window x:Class="SecretaryApp.WPF.Views.WorkLabels.AddWorkLabelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecretaryApp.WPF.Views.WorkLabels"
        mc:Ignorable="d"
        Title="AddWorkLabelView" Height="450" Width="800">

    <Grid Margin="-3,4,3,-4">
        <Button x:Name="backButton" Content="Späť" HorizontalAlignment="Left" Margin="505,355,0,0" VerticalAlignment="Top" Height="35" Width="85" Click="backButton_Click"/>
        <Button x:Name="saveButton" Content="Uložiť" HorizontalAlignment="Left" Margin="646,355,0,0" VerticalAlignment="Top" Height="35" Width="85" Click="saveButton_Click"/>
        <Label Content="Pridaj pracovný štítok" HorizontalAlignment="Left" Margin="24,22,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontFamily="Book Antiqua" FontStyle="Italic"/>
        <Label Content="Názov" HorizontalAlignment="Left" Margin="24,101,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="140,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Počet študentov" HorizontalAlignment="Left" Margin="24,142,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="numberOfStudentsTextBox" HorizontalAlignment="Left" Margin="140,146,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Počet hodín" HorizontalAlignment="Left" Margin="24,187,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="numberOfHoursTextBox" HorizontalAlignment="Left" Margin="140,191,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Počet týždňov" HorizontalAlignment="Left" Margin="24,230,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="numberOfWeeksTextBox"  HorizontalAlignment="Left" Margin="140,234,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Jazyk" HorizontalAlignment="Left" Margin="24,291,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="languageComboBox" Margin="140,291,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
